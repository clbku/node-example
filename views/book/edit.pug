extends ../layout

block content
    h1 Edit Book
    hr
    form.form-horizontal(method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .row
            .col-sm-5
                .form-group
                    label.col-sm-3.control-label(for='image') Image
                    img(src=book.image, style="width: 100%")
            .col-sm-7
                .form-group
                    label.col-sm-3.control-label(for='image') Image
                    .col-sm-7
                        input.form-control(type='text', name='image', id='image', placeholder='Image', value=book.image, autofocus, required)
                .form-group
                    label.col-sm-3.control-label(for='name') Name
                    .col-sm-7
                        input.form-control(type='text', name='name', id='name', value=book.name, placeholder='Name', required)
                .form-group
                    label.col-sm-3.control-label(for='description') Description
                    .col-sm-7
                        input.form-control(type='text', name='description', id='description', value=book.description placeholder='Description', required)
                .form-group
                    .col-sm-offset-3.col-sm-7
                        button.btn.btn-primary(type='submit')
                            | Save change
